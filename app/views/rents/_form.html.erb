<%= form_for(@room) do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :house_id %><br>
    <%= f.number_field :house_id %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :largeness %><br>
    <%= f.text_field :largeness %>
  </div>
  <div class="field">
    <%= f.label :kind %><br>
    <label><%= f.radio_button :kind,"1" %>一戸建て</label>
    <label><%= f.radio_button :kind,"2" %>マンション</label>
    <label><%= f.radio_button :kind,"3" %>アパート</label>
    <label><%= f.radio_button :kind,"4" %>シェアハウス</label>
  </div>
  <div class="field">
    <% @facilities.each do |key,value| %>
      <input type="checkbox" name="facilities[]" value="<%=key%>" <%=facility_check(@selected_facilitiec,key)%>/> <%=value%>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :sex %><br>
    <label><%= f.radio_button :sex,"1" %>男性のみ</label>
    <label><%= f.radio_button :sex,"2" %>女性のみ</label>
    <label><%= f.radio_button :sex,"3" %>どちらでも</label>
  </div>
  <div class="field">
    <%= f.label :rent %><br>
    <%= f.number_field :rent %>
  </div>
  <div class="field">
    <%= f.label :expense %><br>
    <%= f.number_field :expense %>
  </div>
  <div class="field">
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </div>
  <div class="field">
    <%= f.label :enable %><br>
    <label><%= f.radio_button :enable,"true" %>募集中</label>
    <label><%= f.radio_button :enable,"false" %>停止中</label>
  </div>
  <div class="field">
    <%= f.label :nationality %><br>
    <label><%= f.radio_button :nationality,"1" %>日本人のみ</label>
    <label><%= f.radio_button :nationality,"2" %>外国人OK</label>
  </div>
  <div class="field">
    <%= f.label :photo1 %><br>
    <%= f.file_field :photo1 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
